<div
  class="header-bg d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h4 class="my-0 mr-md-auto font-weight-normal">KEEDA</h4>
  <nav class="my-2 my-md-0 mr-md-1">
    <%= link_to topics_path, class: "p-2 text-dark" do%>
      Topics
    <% end %>
    <%= link_to discussions_path, class: "p-2 text-dark" do%>
      Discussions
    <% end %>
    <%= link_to events_path, class: "p-2 text-dark" do%>
      Events
    <% end %>
    <a class="p-2 text-dark" href="/"><span>Home</span></a>
    <% if user_signed_in? %>
      <a class="p-2 text-dark dropdown-toggle" id="navbarDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span><%= current_user.name %></span></a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to 'Profile', edit_user_registration_path, class: "dropdown-item"%>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "dropdown-item"%>
      </div>
    <% else %>
      <%= link_to  new_user_session_path, class: "p-2 text-dark" do%>
      <span>Log In</span>
        <% end %>
      <%= link_to new_user_registration_path, class: "p-2 text-dark" do%>
        <span>Sign Up</span>
      <% end %>
    <% end %>
  </nav>
</div>

