$("#<%= dom_id(@topic) %>").append("<%= j(render(partial: "activities/activity_division", locals:{display_activities: @display_activities, topic: @topic})) %>");
console.log(<%= @display_activities.current_page %>, <%= @display_activities.current_page + 1 %>)
<% if @display_activities.last_page? %>
$("#load-more-activities<%= dom_id(@topic) %>").hide();
<% else %>
$("#load-more-activities<%= dom_id(@topic) %>").attr("href", "<%= topic_path(@topic, page: @display_activities.current_page + 1, per_page: @per_page_count) %>");
<% end %>