<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-3">
    <%= render :partial => 'sidebar', locals: { topic: @topic } %>
  </div>
  <div class="col-md-8">
    <% if @display_activity.present? %>
      <%= render :partial => 'activities/activity', locals: { activity: @display_activity, topic: @topic } %>
    <% else %>
      <% @display_activities.each do |activity| %>
        <% if activity.verb == 'event' %>
          <%= render :partial => 'event/event', locals: { activity: activity, topic: @topic } %>
        <% elsif activity.verb == 'wiki' %>
          <%= render :partial => 'book/book', locals: { activity: activity, topic: @topic } %>
        <% else %>
        <%= render :partial => 'activities/activity', locals: { activity: activity, topic: @topic } %>
          <% end %>
      <% end %>
    <% end %>
  </div>
</div>


