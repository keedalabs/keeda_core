<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-3">
    <%= render :partial => 'topics/sidebar', locals: { topic: @topic } %>
  </div>
  <div class="col-md-8">
    <div class="container book-bg">
      <div class="row">
        <div class="col-sm-12">
          <div class="card card-26">
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <h2><%= @chapter.heading %></h2>
              </div>
            </div>
            <p><%= @chapter.content %></p>
            <div id="dashboard-list" class="container">
              <%= render  partial: 'activities/form', locals: {activity: Activity.new(verb: 'page', parent_id: @chapter.id), topic: @topic.name, parent_id: @chapter.id}  %>
              <% @pages.each do |page| %>
                <%= render :partial => 'page', locals: { book: @book, topic: @topic, chapter: @chapter, page: page } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>